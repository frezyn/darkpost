datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "../../../../node_modules/.prisma/client"
}

model User {
  id             String          @id @default(cuid())
  name           String?
  email          String?         @unique
  emailVerified  DateTime?
  image          String?
  accounts       Account[]
  socialAccounts SocialAccount[]
  sessions       Session[]
  Authenticator  Authenticator[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  socialAccountId   String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  socialAccount SocialAccount? @relation("SocialAccountToAccount", fields: [socialAccountId], references: [id], onDelete: SetNull)

  @@id([provider, providerAccountId])
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
}

model Authenticator {
  credentialID         String  @unique
  userId               String
  providerAccountId    String
  credentialPublicKey  String
  counter              Int
  credentialDeviceType String
  credentialBackedUp   Boolean
  transports           String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([userId, credentialID])
}

model SocialAccount {
  id                String  @id @default(cuid())
  name              String
  nameFromPlataform String?
  userId            String
  description       String?

  accounts Account[] @relation("SocialAccountToAccount")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Post      Post[]

  @@index([userId])
}

model Post {
  id             String     @id @default(cuid())
  userId         String
  videoUrl       String
  caption        String?
  scheduledAt    DateTime?
  status         PostStatus @default(PENDING)
  tiktokPostId   String?
  socialAccounId String
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt

  socialAccount SocialAccount @relation(fields: [socialAccounId], references: [id], onDelete: Cascade)

  @@index([scheduledAt])
  @@index([status])
}

enum PostStatus {
  PENDING
  PROCESSING
  SUCCESS
  FAILED
}
